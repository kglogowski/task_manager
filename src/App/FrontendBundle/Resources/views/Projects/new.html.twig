{% extends "::frontend.html.twig" %}
{% block templatestyle %}
        {% include 'AppHelperBundle:ui:load.html.twig' %}
{% endblock %}

{% block content %}
{% include 'AppHelperBundle:basic:flash.html.twig' %}
{{ include('AppHelperBundle:ui:datapicker.html.twig', { arrObj: ['.date_to'] } ) }}
<div class="cloud">
    <div class="cloud_tt">
        <h3>Nowy projekt</h3>
    </div>
    <div class="cloud_ct">
        <div>
            <form action="" method="POST">
                <div class="well-sm">
                    {{ form_widget(form.nazwa) }}
                </div>
                <div class="well-sm">
                    {{ form_widget(form.nadawca_nazwa) }}
                </div>
                <div class="well-sm">
                    {{ form_widget(form.nadawca_nr_tel) }}
                </div>
                <div class="well-sm">
                    {{ form_widget(form.uzytkownicy) }}
                </div>
                <div class="well-sm">
                    {{ form_widget(form.lider) }}
                </div>
                <div class="well-sm">
                    {{ form_widget(form.date_to) }}
                </div>
                <div class="well-sm">
                    {{ form_row(form._token) }}
                    {{ form_widget(form.save) }}
                </div>
            </form>
        </div>
    </div>
</div>
{{ include('AppHelperBundle:bootstrap:return_link.html.twig', {link: 'projects'}) }}

<script>
    $('.selectpicker').selectpicker();
</script>
{% endblock %}
